<style>
  form {
    text-align: center;
  }
</style>

<h1>Sign Up</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |msg| %>
    <p style="color:red"><strong><%= msg %></strong></p>
  <%end%>
<%end%>

<%= form_for @user do |f| %>
  <p>First Name: <%= f.text_field :first_name, placeholder: "Enter First Name" %></p>
  <p>Last Name: <%= f.text_field :last_name, placeholder: "Enter Last Name" %></p>
  <p>Username: <%= f.text_field :username, placeholder: "Enter Username" %></p>
  <p>Email: <%= f.text_field :email, placeholder: "Enter Email" %></p>
  <p>Password: <%= f.password_field :password, placeholder: "Enter Password" %></p>
  <p>Password Confirmation: <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %><p>
  <%= f.submit "Register" %>
<%end%>