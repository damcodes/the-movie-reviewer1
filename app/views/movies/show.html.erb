<style>
  body {
    background-image: url(https://png.pngtree.com/thumb_back/fw800/back_pic/02/66/87/73578b94f836a03.jpg);
  }
  div {
    text-align: center;
  }
  h3 {
    color: rgb(211, 41, 41);
    font-size: 30px;
  }
  p {
    color: white;
    font-size: 20px;
  }
  #reviews {
    border: 4px solid rgb(211, 41, 41);
  }
  h2 {
    text-align: center;
    color: rgb(211, 41, 41);
    font-size: 38px;
  }
  .user_reviews {
    text-align: center;
    color: white;
  }
  #user_reviews_username {
    font-size: 22px;
    text-decoration: underline;
  }
  #user_reviews_content {
    font-size: 22px;
  }
</style>
<h1><%= @movie.title %></h1>
<div><%= image_tag @movie.poster %></div>


<div id="likes"> 
  <h3>Likes:</h3> 
  <p><%= @movie.like_count %></p>
</div>

<div>
  <% if @movie.liked?(@user)%>
    <a><%= button_to  "Unlike", unlike_path(@movie), method: "put" %></a>
  <%else%>
    <a><%= button_to  "Like", like_path(@movie), method: "put" %></a>
  <% end %>
</div>



<div>
  <h3>Rating</h3>
  <p><%= @movie.rated %></p>
</div>

<div>
  <h3>Released</h3>
  <p><%= @movie.released %></p>
</div>

<div>
  <h3>Runtime</h3>
  <p><%= @movie.runtime %></p>
</div>

<div>
  <h3>Genre(s)</h3>
  <p><%= @movie.genre %></p>
</div>

<div>
  <h3>Director</h3>
  <p><%= @movie.director %></p>
</div>

<div>
  <h3>Actors</h3>
  <p><%= @movie.actors %></p>
</div>

<div>
  <h3>Plot</h3>
  <p><%= @movie.plot %></p>
</div>

<div>
  <h3>Studio</h3>
  <p><%= @movie.production %></p>
</div>


<div id="reviews">
  <h2>Reviews</h2>
    <% @reviews.each do |review| %>
      <div style="border: 2px solid white">
        <div class="user_reviews" id="user_reviews_username"><strong>@<%= review.user.username %></strong></div>
        <div class="user_reviews" id="user_reviews_content"><%= review.content %></div>
      </div>
    <%end%>
</div>


